@import "normalize.styl"
@import "fonts.styl"

verde_claro = #EBFFF0
plomo_claro = #DFE4EA
plomo_oscuro = #BFBFBF
morado = #6C6B86
rojo = #9B4040
plomo_rojizo = #867878 

@import "menu.styl"

body
	background-color plomo_claro
	font-family 'Roboto'
	font-size 16px
	a
		text-decoration none
.container
	background-color white
	width 440px
	height auto
	margin 0 auto
	margin-top 5em
	border 2px solid black
	border-bottom-left-radius 12px
	border-bottom-right-radius 12px
	border-top-left-radius 12px
	border-top-right-radius 12px
.form
	margin 1em 0.8em
	position relative
	// overflow hidden
.form-field
	margin 1em 0em
	padding 0.8em 0
	position relative
	label
		float left
	input
		padding-left 0.5em
		width 235px
		float right
		border 1.5px solid black
		border-bottom-left-radius 10px
		border-bottom-right-radius 10px
		border-top-left-radius 10px
		border-top-right-radius 10px
	div:hover
		span			
			display block
			
.aling
	padding-right 1.6em
	
.last
	margin-bottom 5em
	
.msg-container
	color morado
	margin-top 0.1em
	font-size 1.1em
	margin-left 0.5em
	float right
	span
		display none
		font-size 0.8em
		font-family 'Roboto'
		padding 0.5em
		margin-left 3em
		background-color white
		text-align left
		// z-index 1
		position absolute
#form_msg_account
	right -250px
	top 10px
#form_msg_bank
	width auto
	right -230px
	top 10px
		
#form_msg_contact
	right -165px
	top 10px

.titulo
	background-color plomo_oscuro
	height 33px
	text-align center
	padding-top 0.7em
	margin 0
	border-bottom 3px solid black
	border-bottom-left-radius 12px
	border-bottom-right-radius 12px
	border-top-left-radius 12px
	border-top-right-radius 12px
.boton
	background-color plomo_rojizo
	color white
	bottom -50px
	right 0
	margin-right 1.5em
	width 105px
	border-bottom-left-radius 12px
	border-bottom-right-radius 12px
	border-top-left-radius 12px
	border-top-right-radius 12px
	position absolute