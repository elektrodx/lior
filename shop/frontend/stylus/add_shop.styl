@import "normalize.styl"
@import "fonts.styl"
@import "menu.styl"

body
	background-color plomo_claro
	font-family 'Roboto'
	font-size 16px
	a
		text-decoration none
.boton
	background-color plomo_rojizo
	color white
	float right
	width 105px
	margin-left 650px
	margin-top -1.5em
	border-bottom-left-radius 12px
	border-bottom-right-radius 12px
	border-top-left-radius 12px
	border-top-right-radius 12px
	position absolute
.container
	position fixed
	background-color white
	width 800px
	height auto
	margin 0 auto
	margin-top 5em
	left 21%
	border 2px solid black
	border-bottom-left-radius 12px
	border-bottom-right-radius 12px
	border-top-left-radius 12px
	border-top-right-radius 12px
.form
	div
		display inline-flex
		padding-left 1em
	input
		width 100px
.lastcomponent
	position relative
.provider
	width 216px
	margin 1em 
.table-head
	margin-top 2em
	margin-left 1em
	th
		padding-right 3.5em
		border-bottom 3px solid plomo_rojizo 
.titulo
	background-color plomo_oscuro
	height 33px
	text-align center
	padding-top 0.7em
	margin 0
	border-bottom 3px solid black
	border-bottom-left-radius 12px
	border-bottom-right-radius 12px
	border-top-left-radius 12px
	border-top-right-radius 12px

