@import "normalize.styl"
@import "fonts.styl"
@import "menu.styl"

body
	background-color plomo_claro
	font-family 'Roboto'
	font-size 16px
	a
		text-decoration none
.container
	position fixed
	background-color white
	width 800px
	height auto
	margin 0 auto
	margin-top 5em
	left 21%
	border 2px solid black
	border-bottom-left-radius 12px
	border-bottom-right-radius 12px
	border-top-left-radius 12px
	border-top-right-radius 12px
.form
	div
		display inline-flex
.provider
	width 250px
	margin 1em 
.table-head
	margin-top 2em
	th
		padding-right 3.5em
.titulo
	background-color plomo_oscuro
	height 33px
	text-align center
	padding-top 0.7em
	margin 0
	border-bottom 3px solid black
	border-bottom-left-radius 12px
	border-bottom-right-radius 12px
	border-top-left-radius 12px
	border-top-right-radius 12px

